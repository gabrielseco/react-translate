{
  "name": "@rogal/react-translate",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "start-storybook -p 3001",
    "build-storybook": "build-storybook -c .storybook -o .out-storybook",
    "serve-storybook": "serve .out-storybook -p 5000",
    "build": "rm -rf dist && rollup -c rollup.config.ts",
    "watch": "rollup -c rollup.config.ts -w",
    "lint:js": "front-linter js  -- --presets=javascript,react",
    "lint:ts": "front-linter js  -- --presets=typescript,react",
    "lint": "npm run lint:js && npm run lint:ts",
    "test": "jest --coverage",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "test:watch": "jest --watchAll --coverage",
    "publish:storybook": "gh-pages -d .out-storybook",
    "release:prepare": "shipjs prepare",
    "release:trigger": "shipjs trigger"
  },
  "keywords": [],
  "author": "Gabriel Garc√≠a Seco",
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "dependencies": {
    "html-react-parser": "^0.10.0"
  },
  "devDependencies": {
    "@rogal/front-linter": "3.0.0-beta.6",
    "@storybook/addon-actions": "5.3.9",
    "@storybook/addon-docs": "5.3.9",
    "@storybook/addon-knobs": "5.3.9",
    "@storybook/addon-viewport": "5.3.9",
    "@storybook/preset-scss": "1.0.2",
    "@storybook/preset-typescript": "1.2.2",
    "@storybook/react": "5.3.9",
    "@testing-library/jest-dom": "5.11.3",
    "@testing-library/react": "10.4.8",
    "@types/jest": "26.0.10",
    "@types/node": "14.6.0",
    "babel-loader": "8.1.0",
    "coveralls": "3.1.0",
    "eslint-import-resolver-typescript": "2.2.1",
    "gh-pages": "2.2.0",
    "husky": "4.2.5",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.4.1",
    "lint-staged": "10.2.11",
    "react": "16.12.0",
    "react-docgen-typescript-loader": "3.7.2",
    "react-dom": "16.12.0",
    "rollup": "1.27.13",
    "rollup-plugin-typescript2": "0.25.3",
    "serve": "11.2.0",
    "shipjs": "0.20.1",
    "ts-jest": "26.1.4",
    "typescript": "3.9.7"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/@rogal/front-linter/typescript-react-eslint.js"
    ]
  },
  "stylelint": {
    "extends": [
      "./node_modules/@rogal/front-linter/.stylelintrc.js"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint:js -- --fix --staged"
    ],
    "*.{tsx,ts}": [
      "npm run lint:ts -- --fix --staged"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
