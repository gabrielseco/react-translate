  "scripts": {
    "start": "start-storybook -p 3001",
    "build-storybook": "build-storybook -c .storybook -o .out-storybook",
    "serve-storybook": "serve .out-storybook -p 5000",
    "build": "rollup -c",
    "watch": "rollup -cw",
    "lint:js": "front-linter js  -- --presets=javascript,react --fix",
    "lint:ts": "front-linter js  -- --presets=typescript,react --fix",
    "lint:sass": "front-linter sass  --fix",
    "lint": "npm run lint:js && npm run lint:ts && npm run lint:sass",
    "test": "jest --coverage",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "test:watch": "jest --watch --coverage",
    "publish:storybook": "gh-pages -d .out-storybook"
  },
  "keywords": [],
  "author": "Gabriel Garc√≠a Seco",
